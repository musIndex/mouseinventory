<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>mouseinventory</display-name>
  <welcome-file-list>
    <welcome-file>welcome.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <description></description>
    <display-name>ValidationServlet</display-name>
    <servlet-name>ValidationServlet</servlet-name>
    <servlet-class>edu.ucsf.mousedatabase.servlets.ValidationServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ValidationServlet</servlet-name>
    <url-pattern>/validate</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>ReportServlet</display-name>
    <servlet-name>ReportServlet</servlet-name>
    <servlet-class>edu.ucsf.mousedatabase.servlets.ReportServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ReportServlet</servlet-name>
    <url-pattern>/report</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ImportTransferServlet</servlet-name>
    <servlet-class>edu.ucsf.mousedatabase.servlets.ImportServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ImportTransferServlet</servlet-name>
    <url-pattern>/admin/Import</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>MgiDataServlet</display-name>
    <servlet-name>MgiDataServlet</servlet-name>
    <servlet-class>edu.ucsf.mousedatabase.servlets.MgiDataServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MgiDataServlet</servlet-name>
    <url-pattern>/mgidata</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>PdfServlet</servlet-name>
    <servlet-class>edu.ucsf.mousedatabase.servlets.PdfServlet</servlet-class>
  </servlet>
  <servlet>
  	<description>
  	</description>
  	<display-name>SendMailServlet</display-name>
  	<servlet-name>SendMailServlet</servlet-name>
  	<servlet-class>edu.ucsf.mousedatabase.servlets.SendMailServlet</servlet-class>
  </servlet>
  <servlet>
  	<description>
  	</description>
  	<display-name>UpdateTemplateServlet</display-name>
  	<servlet-name>UpdateTemplateServlet</servlet-name>
  	<servlet-class>edu.ucsf.mousedatabase.servlets.UpdateTemplateServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PdfServlet</servlet-name>
    <url-pattern>/MouseList</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>SendMailServlet</servlet-name>
  	<url-pattern>/admin/SendMail</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>UpdateTemplateServlet</servlet-name>
  	<url-pattern>/admin/UpdateTemplate</url-pattern>
  </servlet-mapping>
  <listener>
    <listener-class>edu.ucsf.mousedatabase.listeners.ContextListener</listener-class>
  </listener>
  <env-entry>
    <env-entry-name>MOUSEDATABASE_MGI_DRIVER_NAME</env-entry-name>
    <env-entry-type>java.lang.String</env-entry-type>
    <env-entry-value>org.postgresql.Driver</env-entry-value>
  </env-entry>
  <env-entry>
    <env-entry-name>MOUSEDATABASE_MGI_DATABASE_URL</env-entry-name>
    <env-entry-type>java.lang.String</env-entry-type>
    <env-entry-value>jdbc:postgresql://adhoc.informatics.jax.org:5432/mgd</env-entry-value>
  </env-entry>
  <env-entry>
    <env-entry-name>MOUSEDATABASE_MGI_DATABASE_USER</env-entry-name>
    <env-entry-type>java.lang.String</env-entry-type>
    <env-entry-value>defaultUserName</env-entry-value>
  </env-entry>
  <env-entry>
    <env-entry-name>MOUSEDATABASE_MGI_DATABASE_PW</env-entry-name>
    <env-entry-type>java.lang.String</env-entry-type>
    <env-entry-value>defaultPassword</env-entry-value>
  </env-entry>
  <env-entry>
    <env-entry-name>MOUSEDATABASE_SITE_NAME</env-entry-name>
    <env-entry-type>java.lang.String</env-entry-type>
  </env-entry>
  <env-entry>
    <env-entry-name>MOUSEDATABASE_SMTP_SERVER</env-entry-name>
    <env-entry-type>java.lang.String</env-entry-type>
  </env-entry>
  <env-entry>
    <env-entry-name>MOUSEDATABASE_SMTP_USER</env-entry-name>
    <env-entry-type>java.lang.String</env-entry-type>
  </env-entry>
  <env-entry>
    <env-entry-name>MOUSEDATABASE_SMTP_PW</env-entry-name>
    <env-entry-type>java.lang.String</env-entry-type>
  </env-entry>
  <env-entry>
    <env-entry-name>MOUSEDATABASE_SMTP_PORT</env-entry-name>
    <env-entry-type>java.lang.Integer</env-entry-type>
  </env-entry>
  <env-entry>
    <env-entry-name>MOUSEDATABASE_SMTP_SSL_ENABLED</env-entry-name>
    <env-entry-type>java.lang.Boolean</env-entry-type>
  </env-entry>
  <env-entry>
    <env-entry-name>GOOGLE_ANALYTICS_ACCOUNT</env-entry-name>
    <env-entry-type>java.lang.String</env-entry-type>
    <env-entry-value></env-entry-value>
  </env-entry>
  <env-entry>
    <env-entry-name>GOOGLE_ANALYTICS_DOMAIN_SUFFIX</env-entry-name>
    <env-entry-type>java.lang.String</env-entry-type>
    <env-entry-value></env-entry-value>
  </env-entry>
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Admin Pages</web-resource-name>
      <url-pattern>/admin/*</url-pattern>
      <http-method>GET</http-method>
      <http-method>POST</http-method>
    </web-resource-collection>
    <auth-constraint>
      <role-name>administrator</role-name>
    </auth-constraint>
  </security-constraint>
  <login-config>
    <auth-method>FORM</auth-method>
    <form-login-config>
      <form-login-page>/adminLoginForm.jsp</form-login-page>
      <form-error-page>/accessDenied.jsp</form-error-page>
    </form-login-config>
  </login-config>
  <security-role>
    <description>Mouse Inventory Site Administrator</description>
    <role-name>administrator</role-name>
  </security-role>
  <error-page>
    <error-code>500</error-code>
    <location>/error.jsp</location>
  </error-page>
  <error-page>
    <error-code>404</error-code>
    <location>/404.jsp</location>
  </error-page>
  <resource-ref>
    <description>Connection Pool</description>
    <res-ref-name>jdbc/mouse_inventory</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>

</web-app>
